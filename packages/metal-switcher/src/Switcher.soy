{namespace Switcher}

/**
 * This renders the main element
 * @param? checked
 * @param? elementClasses
 */
{template .render}
	<div
		class="switcher{$elementClasses ? ' ' + $elementClasses : ''}{$checked ? ' switcher-on' : ''}"
		data-onclick="handleClick"
		data-onkeyup="handleKeyUp"
		tabindex="0">
		<div class="switcher-control">
			<div class="switcher-control-icon"></div>
		</div>
	</div>
{/template}
